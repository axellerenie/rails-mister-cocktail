<h1><i class="fa fa-eye" aria-hidden="true"></i></h1>
<% @cocktails.each do |cocktail| %>

  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4">

        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url("http://placehold.it/30x30");">

          <div class="card-category"><h2><%= cocktail.name %></h2></div>
          <div class="card-description">
            <% cocktail.ingredients.each do |ingredient| %>
            <p><%= ingredient.name %></p>
            <% end %>
          </div>

        </div>


      </div>
    </div>
  </div>
<% end %>
